<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    tools:context="com.bagicode.www.navigationscreen.MainActivity">

    <ImageView
        android:layout_marginRight="20dp"
        android:id="@+id/idlogo"
        android:src="@drawable/ic_logo"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:textColor="#000"
        android:layout_marginTop="25dp"
        android:id="@+id/txtnama"
        android:textSize="25dp"
        android:layout_toRightOf="@id/idlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angga Rizky" />

    <TextView
        android:textColor="#000"
        android:id="@+id/txttime"
        android:layout_below="@id/txtnama"
        android:textSize="15dp"
        android:layout_toRightOf="@id/idlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Minutes ago" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#fff"
        android:layout_below="@id/idlogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:id="@+id/txtket"
            android:text="Kemaren saya sempat liburan ke tempat dimana sangat sangat membuat saya ingin kembali ..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:onClick="goSingleSingle"
            android:id="@+id/ic_thumnail"
            android:layout_below="@id/txtket"
            android:src="@drawable/ic_thumnail"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/ic_favorite"
            android:src="@drawable/ic_favorite"
            android:layout_below="@id/ic_thumnail"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:textColor="#000"
            android:id="@+id/txt_favorite"
            android:layout_toRightOf="@id/ic_favorite"
            android:layout_below="@id/ic_thumnail"
            android:text="12.800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/txt_favorite"
            android:id="@+id/ic_view"
            android:src="@drawable/ic_view"
            android:layout_below="@id/ic_thumnail"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:textColor="#000"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/ic_view"
            android:layout_below="@id/ic_thumnail"
            android:text="12.800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
