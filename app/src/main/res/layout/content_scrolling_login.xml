<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bagicode.www.navigationscreen.ScrollingActivityLogin"
    tools:showIn="@layout/activity_scrolling_login">

    <EditText
        android:textColorHint="#000"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_username"
        android:id="@+id/username"
        android:hint="Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginBottom="20dp"
        android:textColorHint="#000"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_password"
        android:layout_marginTop="10dp"
        android:id="@+id/password"
        android:layout_below="@id/username"
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:textColor="#000"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        android:background="#00000000"
        android:text="Forgot Password ?"
        android:layout_below="@id/password"
        android:id="@+id/btn_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="goAktivityUtama"
        android:id="@+id/tbn_sigin"
        android:background="@color/colorAccent"
        android:text="SIGN IN"
        android:layout_below="@id/password"
        android:layout_toRightOf="@id/btn_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="goAktivityRegister"
        android:background="@color/colorAccent"
        android:text="REGISTER"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_register"
        android:layout_below="@id/btn_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
